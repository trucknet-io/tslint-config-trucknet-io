{
  "compilerOptions": {
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "lib": ["es2015", "es2017"],
    "typeRoots": ["node_modules/@types"],
    "target": "es5",
    "outDir": "custom-rules"
  },
  "include": ["rules"]
}
